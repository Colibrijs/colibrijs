{
  "name": "colibrijs",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "check:types": "tsc --noEmit",
    "check:editorconfig": "editorconfig-checker",
    "dev:api": "npm run dev -w @colibrijs/api",
    "dev:admin": "npm run dev -w @colibrijs/admin",
    "dev:application": "npm run dev -w @colibrijs/application",
    "dev:core": "npm run storybook -w @colibrijs/core",
    "lint:js": "eslint",
    "lint:js:all": "npm run lint:js -- \"**/*.{js,ts,tsx}\"",
    "lint:css": "stylelint",
    "lint:css:all": "npm run lint:css -- --allow-empty-input \"**/*.css\"",
    "lint:formatting": "prettier",
    "lint:formatting:all": "npm run lint:formatting -- \"**/*.{md,yml,json}\"",
    "test:e2e": "playwright test",
    "test:unit": "jest",
    "postinstall": "husky install",
    "pre-commit": "lint-staged",
    "start:api:prod": "npm run start -w @colibrijs/api",
    "start:application:prod": "npm run start -w @colibrijs/application"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/compat": "^1.1.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.5.0",
    "@playwright/test": "^1.44.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.14.8",
    "@types/react": "^18.3.3",
    "@types/pngjs": "^6.0.5",
    "@types/jest-image-snapshot": "^6.4.0",
    "@typescript-eslint/eslint-plugin": "^7.13.1",
    "@typescript-eslint/parser": "^7.13.1",
    "dotenv": "^16.4.5",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-perf": "^3.3.2",
    "eslint-plugin-storybook": "^0.8.0",
    "editorconfig-checker": "^6.0.0",
    "gh-pages": "^6.1.1",
    "globals": "^15.6.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "playwright": "^1.44.1",
    "prettier": "^3.3.2",
    "concurrently": "^9.0.1",
    "react": "^18.3.1",
    "stylelint": "^16.6.1",
    "stylelint-config-htmlacademy": "^4.2.3",
    "stylelint-order-htmlacademy": "^2.1.1",
    "ts-jest": "^29.1.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.2"
  }
}
