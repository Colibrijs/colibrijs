{
  "name": "colibrijs",
  "private": true,
  "type": "module",
  "engines": {
    "node": "^20",
    "npm": "^10"
  },
  "workspaces": [
    "./packages/*"
  ],
  "scripts": {
    "check:types": "tsc --noEmit",
    "dev:api": "npm run dev -w @colibrijs/api",
    "dev:admin": "npm run dev -w @colibrijs/admin",
    "dev:application": "npm run dev -w @colibrijs/application",
    "dev:core": "npm run storybook -w @colibrijs/core",
    "lint": "eslint ./packages/**/*.{js,ts,tsx}",
    "lint:css": "stylelint packages/**/*.css --allow-empty-input",
    "lint:formatting": "prettier **/*.{md,yml,json}",
    "test:e2e": "playwright test",
    "test:unit": "jest",
    "postinstall": "husky install",
    "pre-commit": "lint-staged",
    "start:application:prod": "npm run start -w @colibrijs/application"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.2.2",
    "@commitlint/config-conventional": "^19.2.2",
    "@eslint/compat": "^1.1.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.5.0",
    "@playwright/test": "^1.43.1",
    "@types/jest": "^29.5.12",
    "@types/react": "^18.2.77",
    "@typescript-eslint/eslint-plugin": "^7.6.0",
    "@typescript-eslint/parser": "^7.6.0",
    "eslint": "^9.5.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-import-resolver-typescript": "^3.6.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jest": "^28.6.0",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-react": "^7.34.3",
    "eslint-plugin-react-hooks": "^4.6.2",
    "eslint-plugin-react-perf": "^3.3.2",
    "eslint-plugin-storybook": "^0.8.0",
    "gh-pages": "^6.1.1",
    "globals": "^15.6.0",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.2",
    "playwright": "^1.43.1",
    "prettier": "^3.3.2",
    "react": "^18.2.0",
    "stylelint": "^16.3.1",
    "stylelint-config-htmlacademy": "^4.2.0",
    "stylelint-order-htmlacademy": "^2.1.0",
    "ts-jest": "^29.1.2",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
